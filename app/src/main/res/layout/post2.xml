<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayoutImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/placePostedImage2"
                android:layout_width="match_parent"
                android:src="@drawable/img"
                android:scaleType="fitXY"
                android:layout_height="300dp"/>

            <ImageView
                android:id="@+id/placeSave2"
                android:layout_width="wrap_content"
                android:tag=""
                android:layout_height="wrap_content"
                android:layout_margin="15dp"

                android:src="@drawable/savepost2borderblanc"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/placeCategory2"
                android:fontFamily="sans-serif"
                android:layout_width="250dp"
                android:layout_marginBottom="9dp"
                android:layout_height="wrap_content"
                android:textColor="#454545"
                android:textStyle="bold"
                android:textSize="19sp"
                android:text="category"/>
            <TextView
                android:id="@+id/placeDescription2"
                android:layout_width="250dp"
                android:maxLines="3"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="9dp"
                android:text="Description"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="19dp"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.subinkrishna.widget.CircularImageView
                    android:id="@+id/placeProfileImage2"
                    android:src="@drawable/img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/placeProfileName2"
                        android:layout_width="wrap_content"
                        android:text="ProfilName"
                        android:textColor="#3498db"
                        android:fontFamily="sans-serif-black"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/placePostedDate2"
                        android:layout_width="wrap_content"
                        android:text="PostDate"
                        android:fontFamily="sans-serif"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>