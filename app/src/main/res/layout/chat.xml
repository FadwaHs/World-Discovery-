<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <ImageView
            android:id="@+id/Chatbackicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:padding="10dp"
            />

        <com.subinkrishna.widget.CircularImageView
            android:id="@+id/chatProfileImg"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            app:ci_borderWidth="3dp"
            app:ci_borderColor="#EC9C4C"
            app:ci_shadowRadius="5.0"
            app:ci_shadowColor="#999999"
            android:src="@drawable/koala"/>

        <TextView
            android:id="@+id/senderItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:text="UserName"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:src="@drawable/deleteicon"
            android:layout_marginLeft="200dp"

            />


    </LinearLayout>

    <ListView
        android:id="@+id/chatListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:splitMotionEvents="true"
        android:background="#fff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/raduischat"
       >

        <EditText
            android:id="@+id/chatWriteMessage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#000"
            android:backgroundTint="#fff"
            android:hint="Message..."
            android:layout_height="wrap_content"
            android:layerType="software"
            android:inputType="text"
            android:maxLines="1"/>

        <ImageView
            android:id="@+id/chatSendMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/send"
            />
    </LinearLayout>

</LinearLayout>